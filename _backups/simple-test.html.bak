<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Button Click Test</title>
</head>
<body>

<h1>Button Click Test</h1>
<p>Testing if onclick handlers work properly:</p>

<button onclick="alert('Direct onclick works!')" style="margin: 5px; padding: 10px; background: #28a745; color: white; border: none; border-radius: 4px;">âœ… Test Direct Alert</button>
<button onclick="testFunc()" style="margin: 5px; padding: 10px; background: #007bff; color: white; border: none; border-radius: 4px;">ğŸ”§ Test Function</button>
<button onclick="window.testFunc2()" style="margin: 5px; padding: 10px; background: #dc3545; color: white; border: none; border-radius: 4px;">ğŸŒ Test Window Function</button>

<div id="output" style="margin-top: 20px; padding: 15px; background: #f8f9fa; border-radius: 4px;"></div>

<script>
console.log('ğŸ”„ Script loading...');

function testFunc() {
  console.log('âœ… testFunc called');
  alert('Function testFunc() works!');
  document.getElementById('output').innerHTML += '<p>âœ… testFunc() executed at ' + new Date().toLocaleTimeString() + '</p>';
}

window.testFunc2 = function() {
  console.log('âœ… window.testFunc2 called');
  alert('Window function testFunc2() works!');
  document.getElementById('output').innerHTML += '<p>âœ… window.testFunc2() executed at ' + new Date().toLocaleTimeString() + '</p>';
};

console.log('âœ… Functions defined');
console.log('testFunc available:', typeof testFunc);
console.log('window.testFunc2 available:', typeof window.testFunc2);

document.addEventListener('DOMContentLoaded', () => {
  console.log('âœ… DOM ready');
  document.getElementById('output').innerHTML = '<p><strong>âœ… Script loaded and DOM ready at ' + new Date().toLocaleTimeString() + '</strong></p><p>Click the buttons above to test onclick functionality.</p>';
});
</script>

</body>
</html>
